	<h1>edit</h1>
	<form class="form-horizontal" id="editForm" method="get" action="/user">
		<input type="hidden" name="oldname" value="{{name}}">
		<input type="hidden" name="user" value="me">
			<fieldset style="margin: 40px;">
			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label">Name</label>  
			  <div class="col-md-3">
			  <input name="name" type="text" class="form-control input-md" value="{{name}}">
			  </div>
			</div>

			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label">Gender</label>  
			  <div class="col-md-2">
			  <input name="gender" value="{{gender}}" type="text" class="form-control input-md">  
			  </div>
			</div>

			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label">Age</label>  
			  <div class="col-md-2">
			  <input name="age" value="{{age}}" type="text" class="form-control input-md">
			  </div>
			</div>
			</div>

			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label">Height</label>  
			  <div class="col-md-2">
			  <input name="height" value='{{height}}' type="text" class="form-control input-md">
			  </div>
			</div>

			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label">Weight</label>  
			  <div class="col-md-2">
			  <input name="weight" value='{{weight}}' type="text" class="form-control input-md">
			  </div>
			</div>

			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label">Allergies</label>  
			  <div class="col-md-4">
			  	<textarea name="allergy" type="text" class="form-control input-md" contentediable='true'>{{allergies}}</textarea>
			  </div>
			</div>

			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label">Sensitivities</label>  
			  <div class="col-md-4">
			  	<textarea name="sense" type="text" class="form-control input-md" contenteditable='true'>{{sensitivities}}</textarea>
			  
			  </div>
			</div>

			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label">Heart Conditions</label>  
			  <div class="col-md-4">
			  	<textarea name="heart" type="text" class="form-control input-md" contenteditable='true'>{{heart_conditions}}</textarea>
			  </div>
			</div>

			<div class="form-group">
			  <label class="col-md-4 control-label">Medications</label>  
			  <div class="col-md-4">
			  	<textarea name="med" type="text" class="form-control input-md" contenteditable='true'>{{medications}}</textarea>
			  </div>
			</div>

			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label">Behavioral Problems</label>  
			  <div class="col-md-4">
			  	<textarea name="bprob"  type="text" class="form-control input-md" contenteditable>{{behavioral_problems}}</textarea>
			  </div>
			</div>
			

			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label">Emotional Problems</label>  
			  <div class="col-md-4">
			  	<textarea name="eprob" type="text" class="form-control input-md" contenteditable='true'>{{emotional_problems}}</textarea>
			  </div>
			</div>

			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label">Eye Conditions</label>  
			  <div class="col-md-4">
			  	<textarea name="eye" type="text" class="form-control input-md" contenteditable='true'>{{eye_conditions}}</textarea>
			  </div>
			</div>
			</fieldset>
			<div class="wrapper">
				<button class="btn btn-danger" type="reset">Reset</button> 
				<input type="submit" class="btn btn-success" id="edited" value="Submit">	
				<div style="padding-top: 10px;"></div>
				<button type="button" class="btn btn-default" onclick="location.href='user'">Cancel</button>	
			</div>
		</form>


